<html>
    <head>
        <link rel="stylesheet" href="/css/css.css"  >
        <script src="https://kit.fontawesome.com/108f3e338d.js" crossorigin="anonymous"></script>
    </head>
   
<body>
    <div id="all">
    <h1 id="heading">TODO App</h1>
    <form action="/task" method="POST" id="form"><div id="deshead"><div class="heading"><h4 >Description</h4></div>
        <input type="text" name="description"  id="description" required placeholder="What do you need to do?">
    </div><br>
       
       
        <div id="sec1"> <div class="catdat" id="cat"><div class="heading">Category</div>

       <select name="category" id="category" ">
        <option value="Invalid" selected >Choose a category</option>
        <option value="Personal" class="dropdown" id="personal">Personal</option>
        <option value="School" class="dropdown">School</option>
        <option value="Cleaning" class="dropdown">Cleaning</option>
        <option value="Other" class="dropdown">Others</option>
      </select></div>
       
       
       
       
       
       <div class="catdat heading" >DUE DATE<br><input type="date" name="date" id="date" required></div></div>
       <br>
       <div id="add"> <button id="button"> <i id="plus">+</i> &emsp; &nbsp;<b id="at">ADD TASK</b></button></div>
   </form>

        <div>
            <% for(let i of contact_list){%>
                <div>
                   <div id="output"> <span id="about">
                <i> <%=i.description%></i></span>
               <span id="categ"><i> <%=i.category%></i></i></span><br><br>
               <i id="idate" ><i class="fa-solid fa-calendar-day"></i>&emsp;</i><%=i.date%></i></div>
                
                <a href="/delete-todo/?id=<%=i.id%>" id="delete">
                    <i class="fas fa-window-close" id="logo">Delete Task</i>
                </a>
                <%
            }%></div>
                
        </div>
        
    </div>
        <script type="text/javascript" src="/js/js.js"></script>
</body></html>